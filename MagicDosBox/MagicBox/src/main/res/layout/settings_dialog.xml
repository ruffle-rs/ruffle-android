<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <GridView
            android:id="@+id/settings_dialog_gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="auto_fit" >
        </GridView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/custom_toolbar_style"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/settings_dialog_butsavelayout"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@layout/button_shape_rounded"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:src="@drawable/icon_save" />

                <TextView
                    android:id="@+id/settings_dialog_butsavelayout_title"
                    style="@style/textViewStyle_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Save layout"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="122dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/settings_dialog_butleftkeyboard"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@layout/button_shape_rounded"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_keyboard_left" />
                <ImageButton
                    android:id="@+id/settings_dialog_butrightkeyboard"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@layout/button_shape_rounded"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_keyboard_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_dialog_butquit"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_alignParentRight="true"
                android:background="@layout/button_shape_rounded"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:src="@drawable/icon_turnoff" />

                <TextView
                    android:id="@+id/settings_dialog_butquit_title"
                    style="@style/textViewStyle_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quit"
                    android:textSize="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
