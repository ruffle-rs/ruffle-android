<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:paddingBottom="@dimen/padding_main"
        android:paddingLeft="@dimen/padding_main"
        android:paddingRight="@dimen/padding_main" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_main"
                android:paddingLeft="@dimen/padding_main"
                android:paddingRight="@dimen/padding_main">

                <TextView
                    android:id="@+id/combo_target_action_caption"
                    style="@style/textViewStyle_00"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mouse action"
                    android:layout_marginBottom="5dp"
                    android:background="@layout/sub_section"
                    android:textColor="#c8dd7a"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" >

                        <magiclib.controls.ZoomButton
                            android:id="@+id/combo_target_action_minus"
                            style="@style/btnStyleArsenic"
                            android:layout_width="@dimen/default_zoombutton_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_arrow_left" />

                        <TextView
                            android:id="@+id/combo_target_action_value"
                            style="@style/textViewStyle_00"
                            android:layout_width="@dimen/default_zoombutton_text_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:gravity="center"
                            android:text="Click"/>

                        <magiclib.controls.ZoomButton
                            android:id="@+id/combo_target_action_plus"
                            style="@style/btnStyleArsenic"
                            android:layout_width="@dimen/default_zoombutton_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_arrow_right" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_main"
                android:paddingLeft="@dimen/padding_main"
                android:paddingRight="@dimen/padding_main">

                <TextView
                    android:id="@+id/combo_target_button_caption"
                    style="@style/textViewStyle_00"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Button"
                    android:layout_marginBottom="5dp"
                    android:background="@layout/sub_section"
                    android:textColor="#c8dd7a"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" >

                        <magiclib.controls.ZoomButton
                            android:id="@+id/combo_target_button_minus"
                            style="@style/btnStyleArsenic"
                            android:layout_width="@dimen/default_zoombutton_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_arrow_left" />

                        <TextView
                            android:id="@+id/combo_target_button_value"
                            style="@style/textViewStyle_00"
                            android:layout_width="@dimen/default_zoombutton_text_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:gravity="center"
                            android:text="Left"/>

                        <magiclib.controls.ZoomButton
                            android:id="@+id/combo_target_button_plus"
                            style="@style/btnStyleArsenic"
                            android:layout_width="@dimen/default_zoombutton_width"
                            android:layout_height="@dimen/default_zoombutton_height"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_arrow_right" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/custom_toolbar_style"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/combo_target_confirm"
            style="@style/btnStyleArsenic"
            android:layout_width="@dimen/default_button_width"
            android:layout_height="@dimen/default_button_height"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_confirm" />
    </RelativeLayout>

</LinearLayout>