<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/padding_main"
        android:layout_marginRight="@dimen/padding_main"
        android:layout_marginTop="10dp"
        android:text="Magic Dosbox was unable to locate write-able disk. Please choose installation directory manually."
        style="@style/textViewStyle_00"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/apppicker_choose"
            android:layout_centerInParent="true"
            style="@style/textBtnStyleArsenic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/default_button_width"
            android:scaleType="centerInside"
            android:text="Choose" />
    </RelativeLayout>

</LinearLayout>